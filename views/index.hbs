  <body>

    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center main">
          <div>
            <h1 class="mt-5">Weather App</h1>
            <p class="lead">Enter the name of the city and press search!</p>
          </div>
          <div>
            <form action="/" method="post">
              <input name="city" type="text" >
              <button>Search</button>
            </form>
            <div class="mt-3">
